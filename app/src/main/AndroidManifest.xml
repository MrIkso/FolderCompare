<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrikso.foldercompare">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:name=".App"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.FolderCompareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FolderChooser" android:label="@string/compare_save_result"/>
        <activity android:name=".activity.DiffViewActivity" android:label="@string/text_compare"/>
        <activity android:name=".activity.SettingsActivity" android:label="@string/action_settings"/>
        <activity android:name=".activity.FilterSettingsActivity" android:label="@string/app_name"/>
        <activity android:name=".activity.BaseActivity"/>
        <activity android:name=".activity.AboutActivity" android:label="@string/menu_about"/>
        <activity android:name=".activity.LicenseViewActivity" android:label="@string/about_licenses_title"/>
    </application>

</manifest>