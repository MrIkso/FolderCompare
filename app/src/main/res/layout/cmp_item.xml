<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:padding="6dip">

		<ImageView
			android:id="@+id/row_image_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="6dip" />

		<TextView
			android:id="@+id/top_view_left"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_toRightOf="@id/row_image_left"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/bottom_view_left"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/top_view_left"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:gravity="right" />

	</RelativeLayout>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:padding="6dip">

		<ImageView
			android:id="@+id/row_image_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="6dip" />

		<TextView
			android:id="@+id/top_view_right"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_toRightOf="@id/row_image_right"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/bottom_view_right"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/top_view_right"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:gravity="right" />

	</RelativeLayout>

	<View
		android:id="@+id/divider_cmp"
		android:layout_width="1dip"
		android:layout_height="fill_parent"
		android:layout_weight="0" />

</LinearLayout>