<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="popupOverlayStyle">@style/AppTheme.PopupOverlay</item>
        <item name="colorPrimary">@color/light_colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="appBarLiftOnScroll">false</item>
        <item name="materialCardViewStyle">@style/Widget.CardView</item>
        <item name="android:colorBackground">@color/light_colorPrimary</item>
        <item name="android:dialogTheme">@style/AlertDialog.AppTheme.Light</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.AppTheme.Light</item>
        <item name="simpleThemeTextPrimaryColor">@color/color_text_primary</item>
        <item name="simpleThemeTextSecondaryColor">@color/color_text_secondary</item>

    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="popupOverlayStyle">@style/AppTheme.PopupOverlay.Dark</item>
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="appBarLiftOnScroll">false</item>
        <item name="materialCardViewStyle">@style/Widget.CardView</item>
        <item name="android:colorBackground">@color/dark_colorPrimary</item>
        <item name="android:dialogTheme">@style/AlertDialog.AppTheme.Dark</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.AppTheme.Dark</item>
        <item name="simpleThemeTextPrimaryColor">@color/dark_color_text_primary</item>
        <item name="simpleThemeTextSecondaryColor">@color/dark_color_text_secondary</item>

    </style>
